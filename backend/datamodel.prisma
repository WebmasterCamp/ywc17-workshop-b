type User {
  id: ID! @id
  name: String!
  profileImageUrl: String
  party: Party @relation(name: "Joined", link: INLINE)
}

type Promotion {
  id: ID! @id
  title: String!
  coverImageUrl: String
  description: String!
  duration: String
  location: String
  additionalInfo : String
  condition: String
  contact: String
}

type Party {
  id: ID! @id
  title: String!
  member: User @relation(name: "Joined")
  messages: [Chat!]!
  confirmedMember: User  @relation(name: "Confirmed")
}

type Chat {
  id: ID! @id
  owner: User!
  message: String!
  party: Party!
}